@page
@using BusinessLogicLayer.Models;
@model WebApp.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <title>Register</title>
    <link rel="stylesheet" href="~/css/register.css">
</head>
<body>
    <div class="register-container">
        <h2>Register</h2>
        <form method="post" enctype="multipart/form-data">
            <input asp-for="FirstName" placeholder="First Name" required />
            <span asp-validation-for="FirstName"></span>

            <input asp-for="LastName" placeholder="Last Name" required />
            <span asp-validation-for="LastName"></span>

            <input asp-for="Email" type="email" placeholder="Email" required />
            <span asp-validation-for="Email"></span>

            <input asp-for="Password" type="password" placeholder="Password" required />
            <span asp-validation-for="Password"></span>

            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required />
            <span asp-validation-for="ConfirmPassword"></span>

            <select asp-for="Role" id="roleSelect" onchange="toggleSpecialtiesDropdown()">
                <option value="Mentee">Mentee</option>
                <option value="Mentor">Mentor</option>
            </select>
            <span asp-validation-for="Role"></span>

            <select id="specialtiesSelect" disabled>
                @foreach (var specialty in Enum.GetValues(typeof(Specialty)))
                {
                    <option value="@specialty">@specialty</option>
                }
            </select>
            <button type="button" id="addSpecialtyButton" onclick="addSpecialty()">Add Specialty</button>
            <ul id="selectedSpecialtiesList"></ul>
            <input type="hidden" id="specialtiesHidden" name="SpecialtiesString" />

            <label for="Image">Profile Image:</label>
            <input type="file" asp-for="Image" accept="image/*" />
            <span asp-validation-for="Image"></span>

            <button type="submit">Register</button>
        </form>
    </div>

    @section Scripts {
        <script src="~/js/register.js"></script>
    }
</body>