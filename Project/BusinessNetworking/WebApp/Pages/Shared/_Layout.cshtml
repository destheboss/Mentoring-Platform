<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <ul class="nav-left">
                <li><a href="/Home">Home</a></li>
                <li><a href="/Events">Events</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="/BrowseMentors">Browse Mentors</a></li>
                }
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav-right">
                    <li><a href="/Profile"><img src="https://static.vecteezy.com/system/resources/thumbnails/007/033/146/small/profile-icon-login-head-icon-vector.jpg" alt="Profile" class="profile-image" /></a></li>
                    <li><a asp-page="/Logout">Logout</a></li>
                </ul>
            }
            else
            {
                <ul class="nav-right">
                    <li><a href="/Register">Register</a></li>
                    <li><a href="/Login">Login</a></li>
                </ul>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="container">
            <p>&copy; 2023 Business Networking. All rights reserved.</p>
            <p>About us - Contact us at these socials: [Social Links]</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>